mixin md(path)
  -
    templateOption = {
      interpolate: /\$\$\$(.*?)\$\$\$/g, // Markdownコマンド内でもテンプレートを書けるように "$$$ hoge $$$" のような記法を採用
      dataPath,
      imgPath,
      imageLink: (opts) => {
        const { src, alt } = opts;
        return `<span class="image-link"><img class="elm-img" src="${imgPath}${src}" alt="${alt}"></span>`;
      },
    };

  - const mddoc = require('read-file').sync(`src/${path}`, 'utf8');
  - const mddocHtml = _.template(mddoc)(templateOption);

  article!= markdown.render(mddocHtml)
