mixin md(path)
  - const mddoc = require('read-file').sync(`src/${path}`, 'utf8');
  - _.templateSettings.interpolate = /\$\$\$(.*?)\$\$\$/g // Markdownコマンド内でもテンプレートを書けるように "$$$ hoge $$$" のような記法を採用
  -
    const mddocHtml = _.template(mddoc)({
      dataPath,
      imgPath,
    });
  article!= markdown.render(mddocHtml)
