extends /_layout/_default-layout

append config-block
  - worksPath = ''

block content-block
  +page-title

  .inner-block
    .list
      .item
        a(href=`${worksPath}tag/design/`)
          .card.mdl-card.mdl-shadow--2dp(style=`
            background-image: url(${rootPath}img/works/thumb/bion.png);
          `)

            .mdl-card__title.mdl-card--expand
            .mdl-card__actions
              .title
                span
                  | デザイン

      .item
        a(href=`${worksPath}tag/music/`)
          .card.mdl-card.mdl-shadow--2dp(style=`
            background-image: url(${rootPath}img/works/thumb/music.png);
          `)

            .mdl-card__title.mdl-card--expand
            .mdl-card__actions
              .title
                span
                  | 音楽

      .item
        a(href=`${worksPath}tag/writing/`)
          .card.mdl-card.mdl-shadow--2dp(style=`
            background-image: url(${rootPath}img/works/thumb/writing.png);
          `)

            .mdl-card__title.mdl-card--expand
            .mdl-card__actions
              .title
                span
                  | 詩・執筆
