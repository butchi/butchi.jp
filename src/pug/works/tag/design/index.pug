extends /_layout/_default-layout

append config-block
  - worksPath = '../../'

mixin work(key)
  - const work = works[key];
  .work
    a(href=`${worksPath}${key}`)
      .card.mdl-card.mdl-shadow--2dp(style=`
        background-image: url(${rootPath}img/works/thumb/${work.thumb});
      `)

        .mdl-card__title.mdl-card--expand
        .mdl-card__actions
          .title
            span= work.title

block content-block
  +page-title

  .inner-block

    section
      h2
        | 作品
      .list
        -
          const workKeyArr = Object.keys(works).filter((key) => (
            works[key].tag.includes('design')
            &&
            !works[key].tag.includes('logo')
            &&
            !works[key].tag.includes('newyear')
          ))
        each key in workKeyArr
          .item
            +work(key)

    section
      h2
        | 年賀状
      .list
        -
          const newyearKeyArr = Object.keys(works).filter((key) => (
            works[key].tag.includes('newyear')
          ))
        each key in newyearKeyArr
          .item
            +work(key)

    section
      h2
        | ロゴ
      .list
        -
          const logoKeyArr = Object.keys(works).filter((key) => (
            works[key].tag.includes('logo')
          ))
        each key in logoKeyArr
          .item
            +work(key)
